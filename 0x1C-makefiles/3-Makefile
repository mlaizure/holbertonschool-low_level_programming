.PHONY = all clean oclean fclean re

CC = gcc
SRC = main.c holberton.c
OBJ := $(SRC:%.c=%.o)
NAME = holberton
RM = rm

all: ${OBJ}

	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} -c -o $@ $<

clean:
	${RM} ~.
	${RM} \#.
	${RM} *.swp
	${RM} ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
